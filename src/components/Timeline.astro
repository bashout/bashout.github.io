---
import { Icon } from "astro-icon/components";

const { content } = Astro.props; // Destructure content and default language
---

<body>
    <div class="timeline">
        <div class="container left">
            <div class="content">
                <h2>{content.section1}</h2>
            </div>
        </div>

        <div class="container right">
            <div class="content">
                <h2>{content.section2}</h2>
                <ul>
                    {content.jobs[0].map((job: String) => <li>{job}</li>)}
                </ul>
                <div class="flex flex-row justify-center gap-12">
                    <a
                        target="_blank"
                        href="https://dotnet.microsoft.com/en-us/apps/aspnet/web-apps/blazor"
                        aria-label="Blazor icon"
                    >
                        <Icon name="devicon:blazor" />
                    </a>
                    <a
                        target="_blank"
                        href="https://azure.microsoft.com/en-us"
                        aria-label="Azure icon"
                    >
                        <Icon name="devicon:azure" />
                    </a>
                    <a
                        target="_blank"
                        href="https://dotnet.microsoft.com/en-us/languages/csharp"
                        aria-label="CSharp icon"
                    >
                        <Icon name="devicon:csharp" />
                    </a>
                </div>
            </div>
        </div>

        <div class="container left">
            <div class="content">
                <h2>{content.section3}</h2>
                <ul>
                    {content.jobs[1].map((job: String) => <li>{job}</li>)}
                </ul>
                <div class="flex flex-row justify-center gap-12">
                    <a
                        target="_blank"
                        href="https://angular.dev/"
                        aria-label="Angular icon"
                    >
                        <Icon name="devicon:angular" />
                    </a>
                    <a
                        target="_blank"
                        href="https://learn.microsoft.com/en-us/dotnet/core/introduction"
                        aria-label=".NET Core icon"
                    >
                        <Icon name="devicon:dotnetcore" />
                    </a>
                    <a
                        target="_blank"
                        href="https://azure.microsoft.com/en-us/products/devops/"
                        aria-label="Azure DevOps icon"
                    >
                        <Icon name="devicon:azuredevops" />
                    </a>
                </div>
            </div>
        </div>

        <div class="container right">
            <div class="content">
                <h2>{content.section4}</h2>
                <ul>
                    {content.jobs[2].map((job: String) => <li>{job}</li>)}
                </ul>
                <div class="flex flex-row justify-center gap-12">
                    <a
                        target="_blank"
                        href="https://developer.mozilla.org/en-US/docs/Web/JavaScript"
                        aria-label="JavaScript icon"
                    >
                        <Icon name="devicon:javascript" />
                    </a>
                    <a
                        target="_blank"
                        href="https://developer.mozilla.org/en-US/docs/Glossary/HTML"
                        aria-label="HTML5 icon"
                    >
                        <Icon name="devicon:html5" />
                    </a>
                    <a
                        target="_blank"
                        href="https://git-scm.com/"
                        aria-label="Git icon"
                    >
                        <Icon name="devicon:git" />
                    </a>
                </div>
            </div>
        </div>

        <div class="container left">
            <div class="content">
                <h2>{content.section5}</h2>
            </div>
        </div>
    </div>
</body>

<style>
    h2 {
        font-weight: 400;
    }
    /* The actual timeline (the vertical ruler) */
    .timeline {
        position: relative;
        max-width: 1200px;
    }

    /* The actual timeline (the vertical ruler) */
    .timeline::after {
        content: "";
        position: absolute;
        width: 6px;
        background-color: #abdee6;
        top: 0;
        bottom: 0;
        left: 50%;
        margin-left: -3px;
    }

    /* Container around content */
    .container {
        padding: 10px 40px;
        position: relative;
        background-color: inherit;
        width: 50%;
    }

    /* The circles on the timeline */
    .container::after {
        content: "";
        position: absolute;
        width: 25px;
        height: 25px;
        right: -13px;
        background-color: white;
        border: 4px solid black;
        top: 15px;
        border-radius: 50%;
        z-index: 1;
    }

    /* Place the container to the left */
    .left {
        left: 0;
    }

    /* Place the container to the right */
    .right {
        left: 50%;
    }

    /* Fix the circle for containers on the right side */
    .right::after {
        left: -13px;
    }

    /* The actual content */
    .content {
        padding: 20px 30px;
        background-color: #ffffd1;
        color: black;
        border: 5px solid #f3b0c3;
        border-radius: 5px;
        position: relative;
    }

    [data-icon] {
        font-size: 2rem;
    }

    ul {
        list-style: none; /* Remove default bullets */
        padding: 0;
    }

    ul li {
        position: relative;
        padding-left: 25px;
        padding-right: 25px;
        margin-bottom: 8px; /* Reduced spacing */
    }

    ul li::before {
        content: "";
        position: absolute;
        left: 0;
        top: 50%;
        width: 10px;
        height: 10px;
        background-color: #c5e1a5; /* Pastel green bullet */
        border-radius: 50%;
    }

    ul li::after {
        content: "";
        position: absolute;
        right: 0;
        top: 50%;
        width: 10px;
        height: 10px;
        background-color: #c5e1a5; /* Matching pastel green bullet */
        border-radius: 50%;
    }

    ul li:nth-child(2)::before,
    ul li:nth-child(2)::after {
        background-color: #ffe082; /* Pastel yellow bullet */
    }

    ul li:nth-child(3)::before,
    ul li:nth-child(3)::after {
        background-color: #80deea; /* Pastel blue bullet */
    }

    ul li:nth-child(4)::before,
    ul li:nth-child(4)::after {
        background-color: #ffccbc; /* Pastel peach bullet */
    }

    ul li:nth-child(5)::before,
    ul li:nth-child(5)::after {
        background-color: #b39ddb; /* Pastel purple bullet */
    }

    @media screen and (min-width: 641px) {
        .left {
            .content {
                opacity: 0;
                animation:
                    slideInLeft 1.5s forwards,
                    shadow 1s 1s forwards;
            }
        }

        .right {
            .content {
                opacity: 0;
                animation:
                    slideInRight 1.5s forwards,
                    shadow 1s 1s forwards;
            }
        }
    }

    /* Media queries - Responsive timeline on screens less than 600px wide */
    @media screen and (max-width: 640px) {
        /* Place the timelime to the left */
        .timeline::after {
            left: 31px;
        }

        /* Full-width containers */
        .container {
            width: 100%;
            padding-left: 70px;
            padding-right: 25px;
        }

        .content {
            animation:
                fadeIn 1s forwards,
                shadow 1s 1s forwards;
        }

        /* Make sure that all arrows are pointing leftwards */
        .container::before {
            left: 60px;
            border: medium solid white;
            border-width: 10px 10px 10px 0;
            border-color: transparent white transparent transparent;
        }

        /* Make sure all circles are at the same spot */
        .left::after,
        .right::after {
            left: 19px;
        }

        /* Make all right containers behave like the left ones */
        .right {
            left: 0%;
        }
    }
</style>
